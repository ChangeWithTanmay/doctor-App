{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": ["lucide-react-native", "@lucide/lab", "date-fns"]
      }
    }
  }
}
